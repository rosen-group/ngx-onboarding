{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": false,
        "module": "es2020",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2022",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "paths": {
            "ngx-onboarding": [
                "projects/ngx-onboarding/src/index.ts"
            ],
            "core-js/es7/reflect": [
                "node_modules/core-js/proposals/reflect-metadata"
            ],
            "core-js/es6/*": [
                "node_modules/core-js/es/*"
            ]
        },
        "useDefineForClassFields": false
    }
}
